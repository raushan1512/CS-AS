Example 1

import turtle

def draw_square(t, sz):

     for i in range(4):
        t.forward(sz)
        t.left(90)


wn = turtle.Screen()
bob = turtle.Turtle()
wn.bgcolor("lightblue")
wn.title("Alex meets a function")
bob.color("red")
bob.shape("turtle")

draw_square(bob, 50)
wn.mainloop()

Exercise 1 

import turtle

def draw_square(t, sz):

     for i in range(4):
        t.forward(sz)
        t.left(90)


wn = turtle.Screen()
bob = turtle.Turtle()
wn.bgcolor("lightblue")
wn.title("Saurav is a function")
bob.color("red")
bob.shape("turtle")
bob.pensize(3)
draw_square(bob, 20)

for i in range (4):
    bob.penup()
    bob.forward(40)
    bob.pendown()
    draw_square(bob, 20)

wn.mainloop()

Exercise 2 

import turtle

def draw_square(t, sz):

     for i in range(4):
        t.left(90)
        t.forward(sz)

wn = turtle.Screen()
bob = turtle.Turtle()
wn.bgcolor("lightblue")
wn.title("Saurav is a function")
bob.color("red")
bob.shape("turtle")
bob.pensize(3)

size = 30

for i in range(5):
    draw_square(bob, size)
    bob.penup()
    bob.forward(20)
    bob.right(90)
    bob.forward(20)
    bob.left(90)
    bob.pendown()
    size = size + 40

wn.mainloop()

Exercise 3 


import turtle
x = 0
n = int(input("Please enter the number of sides"))
angle = (180*(n-2))/n
x = int(angle)

def drawpoly(t,n,sz):
    t.forward(sz)
    t.right(n)

wn = turtle.Screen()
wn.bgcolor("light green")

Choo = turtle.Turtle()
Choo.color("pink")
Choo.pensize(3)
i = 0

while i < x:
    drawpoly(Choo,angle,50)

    i = i +1

wn.mainloop()


Exercise 4

import turtle

def drawsquare(t,sz):
    for i in range(4):
        t.forward(sz)
        t.right(90)

wn = turtle.Screen()
wn.bgcolor("light green")

Choo = turtle.Turtle()
Choo.color("pink")
Choo.pensize(3)
i = 0

while i < 20:
    drawsquare(Choo,50)
    Choo.penup()
    Choo.right(18)
    Choo.pendown()
    i = i +1

wn.mainloop()

Exercise 5

import turtle

def drawsquare(t,sz):
    for i in range(1):
        t.forward(sz)
        t.right(92)
        # Make it 90 / 92

wn = turtle.Screen()
wn.bgcolor("light green")

Choo = turtle.Turtle()
Choo.color("magenta")
Choo.pensize(3)
i = 0
w = 1

while i < 100:
    w = w + 4
    drawsquare(Choo,w)

    i = i +1

wn.mainloop()

