Exercise 6

import turtle

def drawequilateral(t,sz):
    for i in range(3):
        t.forward(sz)
        t.right(120)

wn = turtle.Screen()
wn.bgcolor("light green")

Choo = turtle.Turtle()
Choo.color("magenta")
Choo.pensize(3)
i = 0

while i < 2:
    drawequilateral(Choo,40)

    i = i +1

wn.mainloop()

Exercise 7

n = input("Please enter the maximum number")
i = 1
total = 0
while i < n:
    total = total + i

Exercise 8

import math

sz = input("Please enter radius")
def areacirc(sz):
    square = sz * sz
    p = math.pi
    area = p*square

Exercise 9/10

import turtle

def drawstar(t,sz):
    for i in range(5):
        t.forward(sz)
        t.right(144)

wn = turtle.Screen()
wn.bgcolor("light green")

Choo = turtle.Turtle()
Choo.color("magenta")
Choo.pensize(3)
i = 0

while i < 5:
    drawstar(Choo,40)
    Choo.penup()
    Choo.forward(350)
    Choo.right(144)
    Choo.pendown()
    i = i +1

wn.mainloop()

