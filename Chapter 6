def hypotenuse(a,b):
    sum = a**2 + b**2
    print(sum**0.5)

s1 = int(input("enter number 1"))
s2 = int(input("enter number 2"))

Exercise 13

def slope (x1,y1,x2,y2):
    return (y2-y1)/(x2-x1)


g = int(input("X1"))
h = int(input("Y1"))
c = int(input("X2"))
d = int(input("Y2"))

slope(g,h,c,d)

Exercise 14

def is_even(w):
    check = w%2
    if check == 0:
        return True
    else:
        return False

numb = int(input("Enter number"))
is_even(numb)

Exercise 15

def is_odd(n):
    if is_even(n) == True:
        return False
    else:
        return True

Exercise 18

def f2c(f):
    check = (f-32)/1.8
    check = round(check,2)
    return check

fahren = int(input())
f2c(fahren)

Exercise 19

def c2f(c):
    check  = (c*1.8)+32
    check = round(check,2)
    return check

cels = int(input())
c2f(cels)
