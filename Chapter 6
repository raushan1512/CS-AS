Exercise 1

Directions = ['N','E','S','W']
def turn_clockwise(X):
    if X == 'W' or X == 'N' or X == 'S' or X == 'E':
        for i in (0,3,1):
            w = Directions[i]
            if (X) == (w):
                i = i + 1
                i = i % 4
                print (Directions[i])
    else:
        print("Invalid")
a = input("Enter direction")
turn_clockwise(a)

Exercise 2

Days = ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday']

def day_name(e):
    e = int(e)
    e = e % 7
    print(Days[e])

e = int(input("Please enter a number from 0 - 6"))
day_name(e)




Exercise 3

Days = ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday']
Numbers = ['0','1','2','3','4','5','6']

def day_num(x):
    for j in range(0,6,1):
        i = Days[j]
        if x == i:
            print (Numbers[j])

y = str(input("Please enter the day name"))
day_num(y)

Exercise 4

Days = ['Sunday','Monday','Tuesday','Wednesday','Thursday','Friday','Saturday']
Numbers = ['0','1','2','3','4','5','6']

def day_num(a,b):
    for j in range(0,6,1):
        i = Days[j]
        if a == i:
            sum = b + j
            sum = sum % 7
            print (Days[sum])

c = str(input("Please enter the day name"))
d = int(input("Please enter the number of days"))
day_num(c,d)

