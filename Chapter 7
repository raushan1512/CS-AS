# 14

def num_digits(n):
    count = 0
    if n == 0:
        print(1)
    else:
        while n != 0:
            count = count + 1
            n = n // 10
        print ( count )

num_digits(0)

# 15

def even(x):
    string = str(x)
    count = 0
    for i in range(0,len(string),1):
        check = string[i:i+1]
        check = int(check)
        if check % 2 == 0:
            count += 1
    print(count)

even(12345680)

# 16

List =[2,4,5]
def sum(L):
    total = 0
    for i in L:
        total += (i**2)
    print(total)

sum(List)
